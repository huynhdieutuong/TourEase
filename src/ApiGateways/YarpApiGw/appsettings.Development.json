{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "System": "Warning"
      }
    }
  },
  "IdentitySettings": {
    "IdentityServiceUrl": "http://localhost:5000"
  },
  "ReverseProxy": {
    "Routes": {
      "authTourJobs": {
        "ClusterId": "tourAuth",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/auth/tourjobs/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/tourjobs/{**catch-all}"
          }
        ]
      },
      "authDestinations": {
        "ClusterId": "tourAuth",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/auth/destinations/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/destinations/{**catch-all}"
          }
        ]
      },
      "tourJobs": {
        "ClusterId": "tourSearch",
        "Match": {
          "Path": "/tourjobs/{**catch-all}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathPattern": "api/tourjobs/{**catch-all}"
          }
        ]
      },
      "destinations": {
        "ClusterId": "tourSearch",
        "Match": {
          "Path": "/destinations/{**catch-all}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathPattern": "api/destinations/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "tourAuth": {
        "Destinations": {
          "tourAuthApi": {
            "Address": "http://localhost:7001"
          }
        }
      },
      "tourSearch": {
        "Destinations": {
          "tourSearchApi": {
            "Address": "http://localhost:7002"
          }
        }
      }
    }
  }
}
